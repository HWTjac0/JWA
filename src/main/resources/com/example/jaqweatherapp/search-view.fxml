<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<HBox styleClass="search" xmlns:fx="http://javafx.com/fxml"  fx:controller="com.example.jaqweatherapp.SearchController" >
    <fx:define>
        <ToggleGroup fx:id="searchModeGroup" />
    </fx:define>
    <padding>
        <Insets top="20" right="15" bottom="20" left="15" />
    </padding>
    <VBox spacing="20" HBox.hgrow="ALWAYS">
        <HBox styleClass="searchHeading" alignment="CENTER_LEFT">
            <Text styleClass="AppTitle" HBox.hgrow="ALWAYS" textAlignment="CENTER">JacsWeatherApp</Text>
        </HBox>
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Text>
                    Szukaj według:
                </Text>
                <HBox alignment="BASELINE_CENTER" spacing="5" >
                    <ToggleButton fx:id="citySearchButton" text="Miasta" toggleGroup="$searchModeGroup"/>
                    <Text>/</Text>
                    <ToggleButton fx:id="coordianteSearchButton" text="Współrzędnych" toggleGroup="$searchModeGroup"/>
                </HBox>
            </HBox>
            <HBox alignment="CENTER" fx:id="citySearchView">
                <TextField promptText="np. Poznań" prefWidth="350">
                    <padding>
                        <Insets top="10" left="15" right="15" bottom="10" />
                    </padding>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" fx:id="coordinateSearchView">
                <Label>Długość geograficzna</Label>
                <TextField promptText="np. Poznań" prefWidth="350">
                    <padding>
                        <Insets top="10" left="15" right="15" bottom="10" />
                    </padding>
                </TextField>
            </HBox>
        </VBox>
    </VBox>
</HBox>
