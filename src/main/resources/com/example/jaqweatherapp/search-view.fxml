<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<HBox styleClass="search" xmlns:fx="http://javafx.com/fxml"  fx:controller="com.example.jaqweatherapp.SearchController" >
    <padding>
        <Insets top="20" right="15" bottom="20" left="15" />
    </padding>
    <VBox spacing="20" HBox.hgrow="ALWAYS">
        <HBox styleClass="searchHeading" alignment="CENTER_LEFT">
            <Text styleClass="AppTitle" HBox.hgrow="ALWAYS" textAlignment="CENTER">JacsWeatherApp</Text>
        </HBox>
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Text>
                    Szukaj według:
                </Text>
                <HBox alignment="BASELINE_CENTER" spacing="5" >
                    <Button fx:id="citySearchButton" text="Miasta"/>
                    <Text>/</Text>
                    <Button fx:id="coordianteSearchButton" text="Współrzędnych"/>
                </HBox>
            </HBox>
            <HBox alignment="CENTER">
                <TextField promptText="np. Poznań"/>
            </HBox>
        </VBox>
    </VBox>
</HBox>
