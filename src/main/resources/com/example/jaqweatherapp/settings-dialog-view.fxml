<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/" fx:controller="com.example.jaqweatherapp.SettingsDialogController">
    <padding>
        <Insets left="10" right="10" top="10" bottom="10"/>
    </padding>
    <VBox spacing="5">
        <fx:define>
            <ToggleGroup fx:id="settingTemp" />
        </fx:define>
        <Label>Jednostka temperatury:</Label>
        <HBox alignment="CENTER" spacing="5" fx:id="settingTempButtons">
        </HBox>
    </VBox>
    <VBox spacing="5">
        <fx:define>
            <ToggleGroup fx:id="settingMeasur" />
        </fx:define>
        <Label>Jednostka długości:</Label>
        <HBox alignment="CENTER" spacing="5" fx:id="settingMeasurButtons">
        </HBox>
    </VBox>
    <VBox spacing="5">
        <fx:define>
            <ToggleGroup fx:id="settingSpeed" />
        </fx:define>
        <Label>Jednostka prędkości:</Label>
        <HBox alignment="CENTER" spacing="5" fx:id="settingSpeedButtons">
        </HBox>
    </VBox>
    <VBox>
        <Label>Domyślna ścieżka zapisu plików</Label>
    </VBox>
</VBox>